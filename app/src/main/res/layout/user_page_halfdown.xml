        <!--<include layout="@layout/line" />-->

        <RelativeLayout
            android:id="@+id/about_c1ean"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/about_img"
                    android:layout_width="@dimen/typeImgSize"
                    android:layout_height="@dimen/typeImgSize"
                    android:background="@mipmap/about" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/userPageMarginLeft"
                    android:text="关于C1ean" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/rightImgSize"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/right" />
        </RelativeLayout>

        <include layout="@layout/line" />

        <RelativeLayout
            android:id="@+id/check_for_update"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/check_img"
                    android:layout_width="@dimen/typeImgSize"
                    android:layout_height="@dimen/typeImgSize"
                    android:background="@mipmap/update" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/userPageMarginLeft"
                    android:text="检查更新" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/rightImgSize"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/right" />
        </RelativeLayout>

        <include layout="@layout/line" />

        <RelativeLayout
            android:id="@+id/give_a_praise"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/praise_img"
                    android:layout_width="@dimen/typeImgSize"
                    android:layout_height="@dimen/typeImgSize"
                    android:background="@mipmap/good" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/userPageMarginLeft"
                    android:text="给个好评" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/rightImgSize"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/right" />
        </RelativeLayout>

        <include layout="@layout/line" />

        <RelativeLayout
            android:id="@+id/contact_us"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/contact_img"
                    android:layout_width="@dimen/typeImgSize"
                    android:layout_height="@dimen/typeImgSize"
                    android:background="@mipmap/contact" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/userPageMarginLeft"
                    android:text="联系我们" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/rightImgSize"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/right" />
        </RelativeLayout>

        <include layout="@layout/line" />
        <Button
            android:id="@+id/change_account"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/marginTop"
            android:layout_marginEnd="@dimen/marginTop"
            android:layout_height="wrap_content"
            android:background="@drawable/label_shape"
            android:text="切换账号"
            android:textColor="@color/colorWhite" />
        <Button
            android:id="@+id/out_account"
            android:layout_marginBottom="@dimen/marginTop"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textColor="@color/colorWhite"
            android:background="@drawable/label_shape"
            android:layout_marginEnd="@dimen/marginTop"
            android:layout_marginStart="@dimen/marginTop"/>
    </LinearLayout>
</LinearLayout>